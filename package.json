{
  "name": "web-build",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "lint": "npm run format && npm run lint:es",
    "lint:es": "eslint . --fix --ext .ts --ext .tsx --ext .js",
    "format": "prettier --check --write .",
    "config": "node scripts/config.js",
    "versions": "lerna version --conventional-commits  --yes",
    "commit": "git-cz",
    "test": "lerna run test"
  },
  "private": true,
  "type": "module",
  "repository": "git@github.com:guobin211/web-build.git",
  "author": "GuoBin <michaelbguo@tencent.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.4",
    "@types/node": "^14.14.43",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^27.0.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4",
    "core-js": "^3.13.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "engines": {
    "node": "^14.14"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
