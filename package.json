{
  "name": "web-build",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "lint": "npm run format && npm run lint:es",
    "lint:es": "eslint . --fix --ext .ts --ext .tsx --ext .js",
    "format": "prettier --check --write .",
    "config": "node scripts/config.js",
    "versions": "lerna version --conventional-commits  --yes",
    "commit": "git-cz"
  },
  "private": true,
  "type": "module",
  "repository": "git@github.com:guobin211/web-build.git",
  "author": "GuoBin <michaelbguo@tencent.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.43",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^24.3.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4",
    "rollup": "^2.46.0",
    "husky": "^6.0.0",
    "@commitlint/cli": "^12.1.4",
    "lint-staged": "^11.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": "^14.14"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
